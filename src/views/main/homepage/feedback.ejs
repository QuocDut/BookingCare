<% extend("../app.ejs") %>
<section class="detail-nav">
    <div class="container">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    <div class="menu-title text-decoration-none">
                        <a href="/" class="text-decoration-none">
                            <img class="menu-nav" src="/images/background/smile.png" alt="img logo">
                            <span class="text-decoration-none">Doctors care</span>
                        </a>
                    </div>
                </div>
                <div class="col-8 d-flex flex-row justify-content-center align-self-center menu-type">
                    <span class="d-block"><a href="/" class="text-decoration-none">Homepage</a></span>
                    <span class="d-block mx-5"><a href="/for-patients" class="text-decoration-none">For patients</a></span>
                    <span class="d-block"><a href="/for-doctors" class="text-decoration-none">For doctors</a></span>
                </div>
                <div class="col-2 d-flex justify-content-center align-items-center">
                    <span><a href=" https://www.youtube.com/channel/UCHqJxLo7mKam9GKqqwr2wfA?sub_confirmation=1" target="_blank" class="text-decoration-none">Need support?</a></span>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="detail-info-specialization">
    <div class="container">
        <div class="container">
            <div class="row">
                <div class="col-12 mt-3">
                    <a class="text-decoration-none" href="/">Homepage </a><span aria-hidden="true">&raquo;</span>
                    <span style="text-transform: uppercase">
                  Send feedback
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="detail-info-clinic mt-3">
    <div class="container">
        <div class="container">
            <div class="row">
                <div class="col-8 mx-auto">
                    <h2>Send feedback after going to the doctor</h2>
                    <hr>
                    <div>
                        Your feedback will make it easier for others to choose the right doctor.                    </div>
                    <div class="mt-2">
                        Please consult your doctor after consulting your doctor: <%= doctor.name %>
                    </div>
                    <form id="formFeedBack">
                        <div class="form-row mt-4">
                            <div class="col">
                                <label for="feedbackName">Full </label>
                                <input class="form-control" name="feedbackName" id="feedbackName" type="text"
                                       placeholder="Full name (required)">
                            </div>
                            <div class="col">
                                <label for="feedbackPhone">Phone number</label>
                                <input class="form-control" name="feedbackPhone" id="feedbackPhone" type="text"
                                       placeholder="Phone number (required)">
                            </div>
                        </div>
                        <div class="form-group mt-2">
                            <label for="feedbackContent">Content</label>
                            <textarea class="form-control" name="feedbackContent" id="feedbackContent"
                                      type="text"></textarea>
                        </div>
                        <div class="mb-4">
                            <button type="button" class="btn btn-primary" data-doctor-id="<%= doctor.id %>" id="sendFeedback">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
