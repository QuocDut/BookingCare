<% extend("../app.ejs") %>
<section class="detail-nav">
    <div class="container">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    <div class="menu-title text-decoration-none">
                        <a href="/" class="text-decoration-none">
                            <img class="menu-nav" src="/images/background/smile.png" alt="img logo">
                            <span class="text-decoration-none">Doctors care</span>
                        </a>
                    </div>
                </div>
                <div class="col-8 d-flex flex-row justify-content-center align-self-center menu-type">
                    <span class="d-block"><a href="/" class="text-decoration-none">Homepage</a></span>
                    <span class="d-block mx-5"><a href="/for-patients"
                                                  class="text-decoration-none">For patients</a></span>
                    <span class="d-block"><a href="/for-doctors" class="text-decoration-none">For doctors</a></span>
                </div>
                <div class="col-2 d-flex justify-content-center align-items-center">
                    <span><a href=" https://www.youtube.com/channel/UCHqJxLo7mKam9GKqqwr2wfA?sub_confirmation=1" target="_blank" class="text-decoration-none">Need support?</a></span>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="detail-info-specialization">
    <div class="container">
        <div class="container">
            <div class="row">
                <div class="col-12 mt-3">
                    <a class="text-decoration-none" href="/">Homepage </a><span aria-hidden="true">&raquo;</span>
                    <span style="text-transform: uppercase">
                    List of cooperation facilities
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="detail-info-clinic mt-3">
    <div class="container">
        <div class="container">
            <div class="row">
                <div class="col-8 mx-auto">
                    <h2>Medical establishments, hospitals, clinics.</h2>
                    <hr>
                    <div>
                        DoctorsCare is pleased to partner with doctors and medical facilities.
                        List of medical establishments, hospitals and cooperating clinics:

                    </div>
                    <hr>
                    <div class="d-flex flex-row flex-wrap">
                        <% clinics.forEach(function(clinic) { %>
                            <div class="col-6 my-4">
                                <a href="/detail/clinic/<%= clinic.id %>" class="text-decoration-none" style="outline: none">
                                    <div class="d-flex flex-column" title="<%= clinic.name%>">
                                        <img style="height: 200px; width: 300px" src="/images/clinics/<%= clinic.image %>" alt="image bla bla">
                                        <h3 class="mt-3" style="font-size: 18px"><%= clinic.name %></h3>
                                    </div>
                                </a>
                            </div>
                        <% }) %>
                    </div>


                </div>
            </div>
        </div>
    </div>
</section>
