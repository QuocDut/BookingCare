<section class="detail-info-clinic mt-3">
    <div class="container">
        <div class="container">
            <div class="row">
                <div class="col-8 mx-auto">
                    <h2>Work with DoctorsCare</h2>
                    <hr>
                    <div>
                        BookingCare is honored to partner with doctors and medical facilities.
                        Please send information, we will contact you as soon as possible.
                        It is a pleasure to cooperate with doctors and medical facilities. Please send information, we will contact you as soon as possible.
                    </div>
                    <form>
                        <div class="form-row mt-4">
                            <div class="col">
                                <label for="contactName">Contact</label>
                                <input class="form-control" name="contactName" id="contactName" type="text"
                                       placeholder="Contact">
                            </div>
                            <div class="col">
                                <label for="contactEmail">Email address</label>
                                <input class="form-control" name="contactEmail" id="contactEmail" type="text"
                                       placeholder="Email">
                            </div>
                        </div>
                        <div class="form-row mt-2">
                            <div class="col-5">
                                <label for="contactPhone">Phone number</label>
                                <input class="form-control" name="contactPhone" id="contactPhone" type="text"
                                       placeholder="Phone number">
                            </div>
                            <div class="col-7">
                                <label for="contactCompany">Name of the medical facility</label>
                                <input class="form-control" name="contactCompany" id="contactCompany" type="text"
                                       placeholder="Hospitals, clinics, organizations, companies">
                            </div>
                        </div>

                        <div class="form-group mt-2">
                            <label for="contactAddress">Address</label>
                            <input class="form-control" name="contactName" id="contactName" type="text"
                                   placeholder="Address">
                        </div>
                        <div class="form-group mt-2">
                            <label for="contactContent">Content</label>
                            <textarea class="form-control" name="contactContent" id="contactContent"
                                      type="text"></textarea>
                        </div>
                        <div class="mb-4">
                            <button type="button" class="btn btn-primary" id="sendContact">Send information</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
