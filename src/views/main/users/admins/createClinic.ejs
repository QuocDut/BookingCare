<% extend("master.ejs") %>
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Add new clinics</h1>
</div>

<!-- Content Row -->
<div class="row">
    <div class="col-10 mx-auto">
        <form id="formCreateNewClinic" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="name">Clinic name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Clinic name">
                </div>
                <div class="form-group col-md-6">
                    <label for="phone">Phone number</label>
                    <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone number">

                </div>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="address" placeholder="Address">
            </div>
            <div class="form-group">
                <label for="intro-clinic">Introduction</label>
                <textarea id="intro-clinic" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label for="description">Examination and treatment</label>
                <textarea id="description" name="description" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label for="image-clinic">Update images</label>
                <input type="file" id="image-clinic" accept="image/*" onchange="loadFile(event)">
            </div>

            <div class="form-group">
                <img class="img-preview-clinic-create d-none" id="image-preview">
            </div>

            <button type="button" class="btn btn-primary" id="createNewClinic">Create</button>
        </form>
    </div>

</div>


<!-- Content Row -->
<script>
    $(document).ready(function() {
        $("div #collapseUtilities").addClass('show');
        $("div #collapseUtilities").find($("#aManageClinic")).addClass("active");
        $('.supporter-list-posts').removeClass('active');
    })
</script>
