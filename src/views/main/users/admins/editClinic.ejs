<% extend("master.ejs") %>
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Update clinic information</h1>
</div>

<!-- Content Row -->
<div class="row">
    <div class="col-10 mx-auto">
        <form id="formUpdateClinic">
            <div class="form-row">
                <div class="form-group col-6">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Name"
                           value="<%= clinic.name %>">
                </div>
                <div class="form-group col-6">
                    <label for="phone">Phone number</label>
                    <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone number"
                           value="<%= clinic.phone %>">
                </div>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="address" placeholder="Address"
                       value="<%= clinic.address %>">
            </div>
            <div class="form-group">
                <label for="intro-clinic">Description</label>
                <textarea id="intro-clinic" class="form-control"><%= clinic.introductionMarkdown %></textarea>
            </div>
            <div class="form-group">
                <label for="description">Examination and treatment</label>
                <textarea id="description" name="description" class="form-control"><%= clinic.description %></textarea>
            </div>

            <div class="form-group">
                <label for="image-clinic">Update clinic images</label>
                <input type="file" id="image-clinic" accept="image/*" onchange="loadFile(event)">
            </div>

            <div class="form-group">
                <% if(clinic.image) { %>
                    <img class="img-preview-clinic-create" id="image-preview" src="/images/clinics/<%= clinic.image %>">
                <% } else { %>
                    <img class="img-preview-clinic-create d-none" id="image-preview">
                <% } %>
            </div>

            <button type="button" class="btn btn-primary" id="btnUpdateClinic" data-clinic-id="<%= clinic.id %>">Update</button>
        </form>
    </div>

</div>

<script>
    $(document).ready(function() {
        $("div #collapseUtilities").addClass('show');
        $("div #collapseUtilities").find($("#aManageClinic")).addClass("active");
        $('.supporter-list-posts').removeClass('active');
    })
</script>
